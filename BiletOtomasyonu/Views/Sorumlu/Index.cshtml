@model List<BiletOtomasyonu.Models.Sorumlu>
@{
    ViewBag.Title = "Index";
}

<h2 class="text-center h2 mt-5">Sorumlular Sayfası</h2>
<hr />
@if (Model.Count == 0)
{
    <div class="alert alert-danger" role="alert">
        Sisteme kayıtlı sorumlu bulunamadı.
        <a href="/Sorumlu/Add" class="btn btn-primary btn-sm">Ekle</a>
    </div>
}
else
{

    <div class="row mt-2 mb-2">
        <form action="/Sorumlu/Index" method="get">
            <input type="text" id="val" name="val" class="form-control" style="float: left; width: 90%; margin-left: 10px;" placeholder="Sorumlu Adı Soyadı Örn. Ahmet Dilaver" />
            <input type="submit" class="btn btn-success btn-sm" value="Ara" style="float: left; margin-top: 3px; margin-left: 3px;" />
            <a href="/Sorumlu/Add" class="btn btn-primary btn-sm" style="float: left; width: 50px; margin-top: 3px; margin-left: 3px;">Ekle</a>
        </form>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>TC Kimlik No</th>
        <th>Sattığı Bilet Sayısı</th>
        <th>Veritabanı İşlemleri</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.Ad == "admin")
                {
                    continue;
                }
                else
                {
                    <tr>
                        <td>@item.Id.ToString()</td>
                        <td>@item.Ad</td>
                        <td>@item.Soyad</td>
                        <td>@item.Tckn</td>
                        <td>@item.SattigiBiletler.Count.ToString()</td>
                        <td class="text-center">
                            <div class="row">
                                <div class="col-md-4 d-flex justify-content-center">
                                    <a class="btn btn-primary btn-sm" href="/Sorumlu/Update/@item.Id" style="width: 100px;">Güncelle</a>
                                    <a class="btn btn-danger btn-sm" href="/Sorumlu/Delete/@item.Id" style="width: 100px; margin-left: 15px;">Sil</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

}

