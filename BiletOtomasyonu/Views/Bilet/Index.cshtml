@model List<BiletOtomasyonu.Models.Bilet>
@{
    ViewBag.Title = "Index";
}

<h2 class="text-center h2 mt-5">Biletler Sayfası</h2>
<hr />
@if (Model.Count == 0)
{
    <div class="alert alert-danger" role="alert">
        Sisteme kayıtlı bilet bulunamadı.
        <a href="/Bilet/Add" class="btn btn-primary btn-sm">Ekle</a>
    </div>
}
else
{

<div class="row mt-2 mb-2">
    <form action="/Bilet/Index" method="get">
        <input type="text" id="val" name="val" class="form-control" style="float: left; width: 90%; margin-left: 10px;" placeholder="Müşteri Adı Soyadı Örn. Ahmet Karaman" />
        <input type="submit" class="btn btn-success btn-sm" value="Ara" style="float: left; margin-top: 3px; margin-left: 3px;" />
        <a href="/Bilet/Add" class="btn btn-primary btn-sm" style="float: left; width: 50px; margin-top: 3px; margin-left: 3px;">Ekle</a>
    </form>
</div>
    <table class="table table-bordered table-striped">
        <thead>
        <th>#</th>
        <th>Yolcu</th>
        <th>Sefer Tarihi</th>
        <th>İstikamet</th>
        <th>Ücret</th>
        <th>Sorumlu</th>
        <th>Veritabanı İşlemleri</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id.ToString()</td>
                    <td>@item.Musterisi.Ad&nbsp;@item.Musterisi.Soyad</td>
                    <td>@item.Seferi.KalkisZamani.ToString("dddd, dd MMMM yyyy HH:mm:ss")</td>
                    <td>@item.Seferi.KalkisYeri&nbsp;->&nbsp;@item.Seferi.VarisYeri</td>
                    <td>@item.Seferi.Ucret&nbsp;TL</td>
                    <td>@item.Sorumlusu.Ad&nbsp;@item.Sorumlusu.Soyad</td>
                    <td class="text-center">
                        <div class="row">
                            <div class="col-md-4 d-flex justify-content-center">
                                <a class="btn btn-danger btn-sm" href="/Bilet/Delete/@item.Id" style="width: 100px;">Sil</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

