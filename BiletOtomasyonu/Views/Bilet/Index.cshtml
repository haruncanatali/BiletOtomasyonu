@model List<BiletOtomasyonu.Models.Bilet>
@{
    ViewBag.Title = "Index";
}

<h2 class="text-center h2 mt-5">Seferler Sayfası</h2>
<hr />
@if (Model.Count == 0)
{
    <div class="alert alert-danger" role="alert">
        Sisteme kayıtlı sefer bulunamadı.
        <a href="/Bilet/Add" class="btn btn-primary">Ekle</a>
    </div>
}
else
{
    <div class="text-end" style="margin-right: 15px; margin-bottom: 5px;">
        <a href="/Bilet/Add" class="btn btn-primary">Ekle</a>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
        <th>#</th>
        <th>Yolcu</th>
        <th>Sefer Tarihi</th>
        <th>İstikamet</th>
        <th>Ücret</th>
        <th>Veritabanı İşlemleri</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id.ToString()</td>
                    <td>@item.Musterisi.Ad&nbsp;@item.Musterisi.Soyad</td>
                    <td>@item.Seferi.KalkisZamani.ToString("dddd, dd MMMM yyyy HH:mm:ss")</td>
                    <td>@item.Seferi.KalkisYeri&nbsp;->&nbsp;@item.Seferi.VarisYeri</td>
                    <td>@item.Seferi.Ucret&nbsp;TL</td>
                    <td class="text-center">
                        <div class="row">
                            <div class="col-md-4 d-flex justify-content-center">
                                <a class="btn btn-danger btn-sm" href="/Bilet/Delete/@item.Id" style="width: 100px;">Sil</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

