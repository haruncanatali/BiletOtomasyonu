@model BiletOtomasyonu.Models.Surucu
@{
    ViewBag.Title = "Update";
}

<h2 class="h2 text-center mt-2">Şoför Güncelleme Sayfası</h2>
<hr />
<div style="margin-left: 10px;">
    @using (Html.BeginForm("Update", "Sofor", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(c=>c.Id)
        <br />
        <div class="row">
            <div class="col-md-4">
                <label><span class="h4">Ad</span></label>
                @Html.TextBoxFor(c => c.Ad, new { @class = "form-control mt-3", @style = "width:300px;" })
                @Html.ValidationMessageFor(c => c.Ad, null, new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                <label><span class="h4">Soyad</span></label>
                @Html.TextBoxFor(c => c.Soyad, new { @class = "form-control mt-3", @style = "width:300px;" })
                @Html.ValidationMessageFor(c => c.Soyad, null, new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                <label><span class="h4">Otobüsü</span></label>
                @Html.DropDownListFor(c => c.OtobusId, (List<SelectListItem>)ViewBag.otobusler, new { @class = "form-control mt-3", @style = "width: 300px;" })
                @Html.ValidationMessageFor(c => c.OtobusId, null, new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="row d-flex justify-content-center">
            <button type="submit" class="btn btn-primary mt-2" style="width: 200px;">Güncelle</button>
        </div>
    }
</div>

