@model List<BiletOtomasyonu.Models.Musteri>
@{
    ViewBag.Title = "Index";
}

<h2 class="text-center h2 mt-5">Müşteri Sayfası</h2>
<hr />
@if (Model.Count == 0)
{
    <div class="alert alert-danger" role="alert">
        Sisteme kayıtlı müşteri bulunamadı.
        <a href="/Musteri/Add" class="btn btn-primary">Ekle</a>
    </div>
}
else
{
    <div class="text-end" style="margin-right: 15px; margin-bottom: 5px;">
        <a href="/Musteri/Add" class="btn btn-primary">Ekle</a>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Cinsiyet</th>
                <th>TC Kimlik No</th>
                <th>Veritabanı İşlemleri</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id.ToString()</td>
                    <td>@item.Ad</td>
                    <td>@item.Soyad</td>
                    <td>@item.Cinsiyet</td>
                    <td>@item.Tckn</td>
                    <td class="text-center">
                        <div class="row">
                            <div class="col-md-4">
                                <a class="btn btn-warning btn-sm" href="/Musteri/Update/@item.Id" style="width: 70px;">Güncelle</a>
                            </div>
                            <div class="col-md-4 d-flex justify-content-center">
                                <a class="btn btn-danger btn-sm" href="/Musteri/Delete/@item.Id" style="width: 100px;">Sil</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

