@model BiletOtomasyonu.Models.Musteri
@{
    ViewBag.Title = "Update";
}

<h2 class="h2 text-center mt-2">Müşteri Ekleme Sayfası</h2>
<hr />
<div style="margin-left: 10px;">
    @using (Html.BeginForm("Update", "Musteri", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <br />
        <div class="row">
            @Html.HiddenFor(c=>c.Id)
            <div class="col-md-4">
                <label><span class="h4">Müşteri Adı</span></label>
                @Html.TextBoxFor(c => c.Ad, new { @class = "form-control mt-3", @style = "width:300px;" })
                @Html.ValidationMessageFor(c => c.Ad, null, new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                <label><span class="h4">Müşteri Soyadı</span></label>
                @Html.TextBoxFor(c => c.Soyad, new { @class = "form-control mt-3", @style = "width:300px;" })
                @Html.ValidationMessageFor(c => c.Soyad, null, new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                <label><span class="h4">Müşteri Yaşı</span></label>
                @Html.TextBoxFor(c => c.Yas, new { @class = "form-control mt-3", @style = "width:300px;" })
                @Html.ValidationMessageFor(c => c.Yas, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-4">
                <label><span class="h4">Müşteri Cinsiyeti</span></label>
                @Html.TextBoxFor(c => c.Cinsiyet, new { @class = "form-control mt-3", @style = "width:300px;" })
                @Html.ValidationMessageFor(c => c.Cinsiyet, null, new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                <label><span class="h4">Müşteri TC Kimlik No</span></label>
                @Html.TextBoxFor(c => c.Tckn, new { @class = "form-control mt-3", @style = "width:300px;" })
                @Html.ValidationMessageFor(c => c.Tckn, null, new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="row d-flex justify-content-center">
            <button type="submit" class="btn btn-primary mt-2" style="width: 200px;">Güncelle</button>
        </div>
    }
</div>